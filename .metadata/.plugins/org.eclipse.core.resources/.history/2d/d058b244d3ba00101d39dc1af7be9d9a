package com.app.payment;

public class FundTransfer {
	private Account acc1;
	private Account acc2;
	
	public FundTransfer(Account a1, Account a2) {
		this.acc1 = a1;
		this.acc2 = a2;
	}
	
	public boolean transferFunds(Account a1, Account a2, double amount) {
		if(a1.balance() - amount >= 0) {
			return true;
		}
		
		return false;
	}
}
