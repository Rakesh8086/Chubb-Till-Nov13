package com.app.hdfc;

import java.util.Arrays;
import java.util.List;

public class SalaryCalculator {
    public static void main(String[] args) {
        // Sample data
        List<Employee> employees = Arrays.asList(
            new Employee(1, "Alice", 1000),
            new Employee(2, "Bob", 2000),
            new Employee(3, "Charlie", 3000),
            new Employee(4, "Diana", 4000),
            new Employee(5, "Eve", 5000)
        );

        Company company = new Company(employees);

        Bank hdfc = new Bank("HDFC", 14000);

        double totalPaid = company.getEmployees().stream()
                .filter(hdfc::paySalary)  
                .mapToDouble(Employee::getSalary)
                .sum();

        System.out.println("Total salary actually paid: ₹" + totalPaid);
        System.out.println("Remaining balance in HDFC: ₹" + hdfc.getRemainingBalance());
    }
}