package com.app;

import static org.junit.jupiter.api.Assertions.*;
import org.junit.jupiter.api.Test;

class BSTest {

    @Test
    void testElementPresent() {
        int[] arr = {1, 3, 5, 7, 9, 11};
        assertEquals(2, BinarySearch.search(arr, 5)); // Element in middle
    }

    @Test
    void testElementFirstPosition() {
        int[] arr = {1, 3, 5, 7, 9};
        assertEquals(0, BinarySearch.search(arr, 1));
    }

    @Test
    void testElementLastPosition() {
        int[] arr = {2, 4, 6, 8, 10};
        assertEquals(4, BinarySearch.search(arr, 10));
    }

    @Test
    void testElementNotFound() {
        int[] arr = {1, 2, 3, 4, 5};
        assertEquals(-1, BinarySearch.search(arr, 6));
    }

    @Test
    void testEmptyArray() {
        int[] arr = {};
        assertEquals(-1, BinarySearch.search(arr, 3));
    }

    @Test
    void testSingleElementFound() {
        int[] arr = {10};
        assertEquals(0, BinarySearch.search(arr, 10));
    }

    @Test
    void testSingleElementNotFound() {
        int[] arr = {10};
        assertEquals(-1, BinarySearch.search(arr, 20));
    }

    @Test
    void testNegativeNumbers() {
        int[] arr = {-10, -5, 0, 5, 10};
        assertEquals(1, BinarySearch.search(arr, -5));
        assertEquals(3, BinarySearch.search(arr, 5));
    }

    @Test
    void testLargeArray() {
        int[] arr = new int[1000];
        for (int i = 0; i < 1000; i++) arr[i] = i;
        assertEquals(999, BinarySearch.search(arr, 999));
        assertEquals(0, BinarySearch.search(arr, 0));
        assertEquals(-1, BinarySearch.search(arr, 1001));
    }
}
