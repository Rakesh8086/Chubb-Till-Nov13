package com.app.hdfc;

import java.util.Arrays;
import java.util.List;

public class SalaryCalculator {
    public static void main(String[] args) {
        // Sample data
        List<Employee> employees = Arrays.asList(
            new Employee(1, "AAA", 1000),
            new Employee(2, "BBB", 2000),
            new Employee(3, "CCC", 3000),
            new Employee(4, "DDD", 4000),
            new Employee(5, "EEE", 5000)
        );

        Company company = new Company(employees);

        Bank hdfc = new Bank("HDFC", 14000);

        double totalPaid = company.getEmployees().stream()
                .filter(hdfc::paySalary)  
                .mapToDouble(Employee::getSalary)
                .sum();

        System.out.println("Total paid: " + totalPaid);
        System.out.println("Remaining balance: " + hdfc.getRemainingBalance());
    }
}